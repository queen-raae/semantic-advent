---
import SiteLayout from "./SiteLayout.astro";
import Snowflakes from "@components/Snowflakes.astro";

export interface Props {
  url: string;
  frontmatter: {
    title: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;
---

<SiteLayout title={frontmatter.title}>
  <Snowflakes />
  <slot />
</SiteLayout>
